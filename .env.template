# Crowd Monitoring Dashboard - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL (Production)
# DATABASE_URL=postgresql://user:password@localhost:5432/crowdmonitor

# SQLite (Development - auto-created)
# DATABASE_URL=sqlite:///crowd_monitor.db

# For Heroku PostgreSQL
# DATABASE_URL=postgresql://user:password@host:5432/dbname

DATABASE_URL=sqlite:///crowd_monitor.db

# ============================================================================
# CROWD DETECTION SETTINGS
# ============================================================================

# Threshold for crowd alert (number of people)
CROWD_THRESHOLD=500

# Enable email alerts
ALERTS_ENABLED=true

# Target frames per second for processing
FPS_TARGET=5

# Number of frames to smooth over for stability
SMOOTH_WINDOW=5

# Maximum number of historical records to keep in memory
MAX_HISTORY=1000

# ============================================================================
# EMAIL/SMTP CONFIGURATION
# ============================================================================

# Gmail (Recommended for testing)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Your email address (sender)
SMTP_USER=your-email@gmail.com

# Gmail App Password (NOT your regular password!)
# Generate at: https://myaccount.google.com/apppasswords
SMTP_PASSWORD=your-app-specific-password

# Alternative SMTP providers:
# Outlook: smtp.office365.com:587
# SendGrid: smtp.sendgrid.net:587 (use 'apikey' as username)
# AWS SES: email-smtp.region.amazonaws.com:587

# ============================================================================
# FLASK CONFIGURATION
# ============================================================================

# Environment: production, development, testing
FLASK_ENV=production

# Secret key for session management (change this!)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Debug mode (NEVER true in production)
FLASK_DEBUG=false

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Port to run Flask on
PORT=5000

# Server host (0.0.0.0 = accessible from any IP)
HOST=0.0.0.0

# Number of Gunicorn workers
WORKERS=2

# Request timeout in seconds
TIMEOUT=120

# ============================================================================
# LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file location
LOG_FILE=/var/log/crowd-monitor/app.log

# ============================================================================
# OPTIONAL INTEGRATIONS
# ============================================================================

# Sentry (Error tracking) - Optional
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/123456

# AWS S3 (For storing heatmaps/frames) - Optional
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

# Redis (For caching) - Optional
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# CAMERA CONFIGURATION
# ============================================================================

# Camera source:
# 0 = default webcam
# 'rtsp://camera-ip:554/stream' = IP camera
# 'video.mp4' = video file
CAMERA_SOURCE=0

# Camera resolution (for cloud deployments without camera)
CAMERA_WIDTH=640
CAMERA_HEIGHT=480

# ============================================================================
# DEPLOYMENT PLATFORM
# ============================================================================

# Which platform you're using: pythonanywhere, heroku, aws, azure, digitalocean, docker
PLATFORM=local

# ============================================================================
# NOTES
# ============================================================================

# 1. Change all passwords before deploying!
# 2. Keep this file secure - never commit to git
# 3. Use strong SECRET_KEY (generate with: python -c "import secrets; print(secrets.token_hex(32))")
# 4. For Gmail, you MUST use an app-specific password, not your regular password
# 5. Test SMTP configuration with: python test_smtp.py
